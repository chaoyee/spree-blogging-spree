<div id="blog_entry_container" class="columns twelve omega">
  <% if !@blog_entries.empty? %>
    <ul class="media-list">
      <% @blog_entries.each do |blog_entry| %>
        <li class="media">
          <div class="media-left">
            <%= image_tag blog_entry.blog_entry_image.attachment.url('mini') if blog_entry  . blog_entry_image %>
          </div>
          <div class="media-body">
            <h4 class="media-heading"></h4>
            <%= render :partial => 'spree/blog_entries/blog_entry', locals: { blog_entry:   blog_entry} %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate @blog_entries %>
  <% else %>
    <p id="no_entries"><%= Spree.t(:no_blog_entries) %></p>
  <% end %>
</div>
